
public class NumberPattern {
public static void main(String[] args) {

int rows = 5;

for (int i = 1; i <= rows; i++)

{

for (int j = 1; j <= rows-i; j++) {

System.out.print(" ");}

for (int j = i; j < 2 * i; j++) {

System.out.print(j);
}
for (int j = 2* i-2; j >= i; j--) {

System.out.print(j);}

System.out.println();
}
}}



