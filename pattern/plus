import java.util.Scanner;
public class mid {
    public static void main(String[] args) {
        int n=5;
         int midRow = n / 2 + 1;
        for(int i=1;i<=n;i++){
            for(int j=1;j<=n;j++){
                if(i==midRow || j==midRow){
                    System.out.print("*");
                }
                else{
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}



