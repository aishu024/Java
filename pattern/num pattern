import java.util.Scanner;

 public class sort {

	public static void main(String[] args) {
		int n=5;
		for(int i=1;i<=n;i++){
		    for(int j=n;j>=i;j--){
		        System.out.print(" ");
		    }
		    int num=i;
		    for(int k=1;k<=i;k++){
		        System.out.print(num++ +" ");
		    }
		
			System.out.println();
		}
        }
	}


op:


     1 
    2 3 
   3 4 5 
  4 5 6 7 
 5 6 7 8 9 
