package datastructure;

import java.util.Arrays;

public class linear {
	
public static int linear(int[] arr,int x) {
	for(int i=0;i<arr.length;i++) {

	if(arr[i]==x) {
		return i;
	}}
	return -1;
	
}
 public static void main(String args[]) {
	 int[] arr= {2,3,4,10,40};
	 int x=10;
	 int result=linear(arr,x);
	 int len=result+1;
	 if(result== -1)
	 {
		 System.out.println("element not in an array");
		 }else {
			 System.out.println("element found at index : "+result + " and length is: "+len);
			 
		 }
 }
}





op:

element found at index : 3 and length is: 4

