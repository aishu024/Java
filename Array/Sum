import java.util.Scanner;
import java.util.Arrays;
public class array {

public static void main(String[] args) {

int sum=0;

Scanner in= new Scanner(System .in);

System.out.print("enter the length: ");

int n= in.nextInt();

int[] a= new int[n];

for(int i=0;i<n;i++){

System.out.print("The value of a["+i+"] is: "); a[i]=in.nextInt();

}
System.out.println("The array value is: "+Arrays .toString(a));
for(int num:a) {
sum+=num; }

System.out.print("The sum value is: "+sum);
} }

op;

enter the length: 3

